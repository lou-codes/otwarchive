<h3 class="landmark heading"><%= t(".landmark") %></h3>
<ul class="navigation actions">
  <% if policy(:wrangling).new? %>
    <li>
      <%= span_if_current t(".wrangling_guidelines"), wrangling_guidelines_path %>
    </li>
  <% end %>
  <li><%= link_to ts("New Wrangling Guideline"), new_wrangling_guideline_path %></li>
  <li><%= link_to ts("Reorder Wrangling Guidelines"), manage_wrangling_guidelines_path %></li>
  <% if params[:action] == "edit" %>
    <li>
      <%= link_to t(".guideline.delete_guideline"),
                  @wrangling_guideline,
                  data: { confirm: "Are you sure you want to delete this wrangling guideline?" },
                  method: :delete %>
    </li>
  <% end %>
</ul>